# ip adderss
export WIN_IP=$(cat /etc/resolv.conf | grep 'nameserver' | cut -f 2 -d ' ')
export WSL_IP=$(ip addr show eth0 | grep 'inet ' | cut -f 6 -d ' ' | cut -f 1 -d '/')

# Windows username
export WIN_USER=$(powershell.exe '$env:UserName' | sed -e 's/\r//g')

